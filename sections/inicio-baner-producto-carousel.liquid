<div class="container my-5">
    <div class="row d-flex align-items-center my-5 py-5">
        <div class="col-md-6">

            <h1>
                {{section.settings.Text_Collection_Principal}}
            </h1>

            <div class="buttonFromlares my-5">
                SEE MORE
            </div>
        </div>
        <div class="col-md-6">
            <div class="carouselProductos" style="width: 100%;">
                {% unless section.settings.productUnoFinal == blank %}
                    {% assign productUno = all_products[section.settings.productUnoFinal] %}
                    {% if productUno %}
                        <a href="{{ productUno.url }}" class="productContainer">
                            <img alt="Imagen" class="img-fluid imgProductBackground" src="{{productUno.featured_image | img_url: "master" }}"/>
                            <h6 class="m-0 my-3" style="font-weight: 600">
                                {% for collection in productUno.collections %}
                                    {{ collection.title }}
                                {% endfor %}
                            </h6>
                            <div class="textosProducto d-flex justify-content-between d-flex align-items-center">
                                <span>
                                    <h5 class="m-0" style="font-weight: normal;">
                                        {{ productUno.title }}
                                    </h5>
                                    <h5 class="m-0" style="font-weight: normal;">
                                        {{ productUno.price | money_with_currency  }}
                                    </h5>
                                </span>
                                <img src="https://cdn.shopify.com/s/files/1/0588/1688/9029/files/agregarAlCarrito.png?v=1630590483" height="40" />
                            </div>
                        </a>
                    {% else %}
                        No product, or invalid product, selected.
                    {% endif %}
                {% endunless %}

                {% unless section.settings.productDosFinal == blank %}
                    {% assign productDos = all_products[section.settings.productDosFinal] %}
                    {% if productDos %}
                    <a href="{{ productDos.url }}" class="productContainer">
                        <img alt="Imagen" class="img-fluid imgProductBackground" src="{{productDos.featured_image | img_url: "master" }}"/>
                        <h6 class="m-0  my-3" style="font-weight: 600">
                            {% for collection in productDos.collections %}
                                {{ collection.title }}
                            {% endfor %}
                        </h6>
                        <div class="textosProducto d-flex justify-content-between d-flex align-items-center">
                            <span>
                                <h5 class="m-0" style="font-weight: normal;">
                                    {{ productDos.title }}
                                </h5>
                                <h5 class="m-0" style="font-weight: normal;">
                                    {{ productDos.price | money_with_currency  }}
                                </h5>
                            </span>
                            <img src="https://cdn.shopify.com/s/files/1/0588/1688/9029/files/agregarAlCarrito.png?v=1630590483" height="40" />
                        </div>
                    </a>
                    {% else %}
                        No product, or invalid product, selected.
                    {% endif %}
                {% endunless %}


                {% unless section.settings.productTresFinal == blank %}
                    {% assign productTres = all_products[section.settings.productTresFinal] %}
                    {% if productTres %}
                    <a href="{{ productTres.url }}" class="productContainer">
                        <img alt="Imagen" class="img-fluid imgProductBackground" src="{{productTres.featured_image | img_url: "master" }}"/>
                        <h6 class="m-0 my-3" style="font-weight: 600">
                            {% for collection in productTres.collections %}
                                {{ collection.title }}
                            {% endfor %}
                        </h6>
                        <div class="textosProducto d-flex justify-content-between d-flex align-items-center">
                            <span>
                                <h5 class="m-0" style="font-weight: normal;">
                                    {{ productTres.title }}
                                </h5>
                                <h5 class="m-0" style="font-weight: normal;">
                                    {{ productTres.price | money_with_currency  }}
                                </h5>
                            </span>
                            <img src="https://cdn.shopify.com/s/files/1/0588/1688/9029/files/agregarAlCarrito.png?v=1630590483" height="40" />
                        </div>
                    </a>
                    {% else %}
                        No product, or invalid product, selected.
                    {% endif %}
                {% endunless %}
            </div>

            <br>
            <br>
            <div class="textoRefuerzo ">
                {{section.settings.Text_Description_}}
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function(){
      $('.carouselProductos').slick({
        slidesToShow: 2,
        dots:true,
        arrows: true
        
        });
    })
</script>


{% schema %}

{
    "name": "Colección Destacada",
    "settings": [
        {
            "type": "collection",
            "id": "Collection_Principal",
            "label": "Colección"
        }, 
        {
            "type": "text",
            "id": "Text_Collection_Principal",
            "label": "Texto De Colección."
        }, 
        {
            "type": "text",
            "id": "Text_Description_",
            "label": "Texto De refuerzo."
        }, 
        {
            "type": "image_picker",
            "id": "Imagen_Producto_Coleccion_Izquierda",
            "label": "Imagen Izquierda"
        }, {
            "type": "product",
            "id": "productUnoFinal",
            "label": "Product"
        }, {
            "type": "product",
            "id": "productDosFinal",
            "label": "ProductDos"
        }, {
            "type": "product",
            "id": "productTresFinal",
            "label": "ProductDos"
        }
    ]
}

{% endschema %}
