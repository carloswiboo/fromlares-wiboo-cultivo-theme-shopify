<div class="formOpen animate__animated animate__fadeInDown animate__backOutUp" style="display: none;">
    <div class="container-fluid my-4 p-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <img class="openCloseMenu" src="//cdn.shopify.com/s/files/1/0588/1688/9029/files/Recurso_1_3x_7ced14a9-b96c-4dc3-a92f-cebcc9552c83_32x32.png?v=1627424814" />
                </div>
            </div>
        </div>
        <div class="formOpenLinks text-end">
          
            {% for link in linklists.abierto.links %}
                {% assign child_list_handle = link.title | handleize %}
                {% if linklists[child_list_handle].links != blank %}
                    <li aria-haspopup="true" class="site-nav--has-dropdown{% if link.active %} site-nav--active{% endif %}">
                        <a href="{{ link.url }}" class="site-nav__link">
                            {{ link.title }}
                            <span aria-hidden="true" class="icon icon-arrow-down"></span>
                        </a>
                        <ul class="site-nav__dropdown">
                            {% for childlink in linklists[child_list_handle].links %}
                                <li {% if childlink.active %} class="site-nav--active" {% endif %}>
                                    <a href="{{ childlink.url }}" class="site-nav__link">{{ childlink.title | escape }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li {% if link.active %} class="site-nav--active" {% endif %}>
                        <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>

                    </li>
                {% endif %}
            {% endfor %}

            <div class="grayBelt text-end text-end my-2 me-auto" style="font-size: 1rem; width: 100%;">
                <div class="d-flex justify-content-around">
                    <a href="/collections/dining">Dining</a>
                    <a href="/collections/living">Living</a>
                </div>
            </div>

            {% for link in linklists.menu-abierto-abajo.links %}
                {% assign child_list_handle = link.title | handleize %}
                {% if linklists[child_list_handle].links != blank %}
                    <li aria-haspopup="true" class="site-nav--has-dropdown{% if link.active %} site-nav--active{% endif %}">
                        <a href="{{ link.url }}" class="site-nav__link">
                            {{ link.title }}
                            <span aria-hidden="true" class="icon icon-arrow-down"></span>
                        </a>
                        <ul class="site-nav__dropdown">
                            {% for childlink in linklists[child_list_handle].links %}
                                <li {% if childlink.active %} class="site-nav--active" {% endif %}>
                                    <a href="{{ childlink.url }}" class="site-nav__link">{{ childlink.title | escape }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li {% if link.active %} class="site-nav--active" {% endif %}>
                        <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>

                    </li>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $(".openCloseMenu").on("click", function () {
            $(".formOpen").fadeToggle();
        })
    })
</script>