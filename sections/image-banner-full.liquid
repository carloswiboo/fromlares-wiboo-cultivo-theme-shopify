

<div class="imgFullWelcome ocultarFrame animate__animated animate__fadeIn p-3" style="background: linear-gradient(270deg, #d89fe0, #e0cde6); position: fixed; top:0; left:0; right: 0; bottom: 0; z-index: 5000">
    <img class="animate__animated animate__fadeIn" style="width: 100%;" src="{{ section.settings.ImagenFullLoading | img_url: 'master' }}"/>
</div>

<img class="imgFullWelcomeDos" src="{{ section.settings.ImagenFullLoaded | img_url: 'master' }}"/>

<script>
   $(document).ready(function(){
    setTimeout(function(){
 	$(".ocultarFrame").removeClass( "animate__fadeIn" );
 	$(".ocultarFrame").addClass( "animate__fadeOut" );
}, 2000);//wait 2 seconds
   });
   $(document).ready(function(){
    setTimeout(function(){
 	
        $(".ocultarFrame").addClass( "d-none" );
             

}, 2500);//wait 2 seconds
   });
</script>

{% schema %}

{
    "name": "Imagen Principal",
    "settings": [
        {
            "type": "image_picker",
            "id": "ImagenFullLoading",
            "label": "Imagen De Fondo Cargando"
        },
        {
            "type": "image_picker",
            "id": "ImagenFullLoaded",
            "label": "Imagen De Fondo Cargado"
        }
    ]
}

{% endschema %}
